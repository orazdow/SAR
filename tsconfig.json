{
  "compileOnSave": true,

  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",

    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*"]
    },

    "outDir": "./dist/",

    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "dom"
    ]
  },

  "include": [
    "*.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],

  "exclude": [
    "node_modules"
  ]
}
